@page
@model Apkaweb.Pages.LockedAccountModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Locked Account Page</title>
</head>
<body>
    <h1>Locked Account Page</h1>
    <p>The account for user @Model.Username is locked.</p>

    <form method="post">
        <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" value="@Model.Username" readonly />
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" />
        </div>
        <div>
            <label for="question">Security Question:</label>
            <p>@Model.SecurityQuestion</p>
        </div>
        <div>
            <label for="answer">Answer:</label>
            <input type="text" id="answer" name="answer" />
        </div>
        <button type="submit">Submit</button>
    </form>
</body>
</html>
