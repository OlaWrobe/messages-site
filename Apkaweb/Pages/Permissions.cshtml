@page
@model PermissionsModel

<form method="post">
    <div>
        <label for="usersWithoutPermission">Users without Permission:</label>
        <select asp-for="SelectedUserWithoutPermission" asp-items="Model.UsersWithoutPermission"></select>
        <button type="submit" asp-page-handler="GrantPermission">Grant Permission</button>
    </div>
    <br />
    <div>
        <label for="usersWithPermission">Users with Permission:</label>
        <select asp-for="SelectedUserWithPermission" asp-items="Model.UsersWithPermission"></select>
        <button type="submit" asp-page-handler="RevokePermission">Revoke Permission</button>
    </div>
</form>
